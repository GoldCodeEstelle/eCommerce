{
  "name": "ecommerce",
  "version": "1.0.0",
  "description": "MERN shopping cart app",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server/server.js",
    "backend": "nodemon server/server.js",
    "frontend": "npm run start --prefix client",
    "dev": "concurrently \"npm run backend\" \"npm run start --prefix client\"",
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d",
    "heroku-postbuild":"NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
    
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GoldCodeEstelle/eCommerce.git"
  },
  "author": "Krista Harris",
  "license": "ISC",
  "engine":{
    "node":"10.16.0",
    "npm":"6.14.8"
  },
  "bugs": {
    "url": "https://github.com/GoldCodeEstelle/eCommerce/issues"
  },
  "homepage": "https://github.com/GoldCodeEstelle/eCommerce#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.6",
    "morgan": "^1.10.0",
    "multer": "^1.4.2"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.4"
  }
}
